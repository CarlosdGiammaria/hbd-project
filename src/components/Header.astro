---
import "../../public/css/style.css";
const { title, subtitle } = Astro.props;
---

<header
  class="relative h-96 mb-8 bg-cover bg-center bg-no-repeat"
  style="background-image:url('/public/image/im40.jpg')"
>
  <section
    class="absolute bg-black bg-opacity-45 w-full h-full flex flex-col items-center justify-center text-center"
  >
    <h1 class="text-white font-bold text-title capitalize">
      {title}
    </h1>
    <h3 class="text-subtitle text-white font-bold capitalize">
      {subtitle}
    </h3>
  </section>
</header>
